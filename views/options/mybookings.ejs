<%- layout('/layouts/boilerplate') %>
  <style>
    /* ✅ Scoped wrapper so boilerplate is untouched */
    .my-bookings-wrapper {

      font-family: Inter, system-ui, Arial, sans-serif;

    }

    .my-bookings-wrapper * {
      box-sizing: border-box;
    }

    .my-bookings-wrapper .booking-page-header {
      /* background: white; */
      
      padding: 24px 12px;
      /* text-align: center; */
    }

    .my-bookings-wrapper .booking-page-header h1 {
      font-size: 28px;
      font-weight: 700;
    }

    .my-bookings-wrapper .booking-page-header p {
      /* color: var(--text-muted); */
      margin-top: 6px;
      font-size: 14px;
    }

    .my-bookings-wrapper .booking-page-main {
      max-width: 1100px;
      margin: 32px auto;
      padding: 0 16px;
    }

    .my-bookings-wrapper .booking-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, 320px);
      gap: 24px;
      /* justify-content: center; */
    }

    .my-bookings-wrapper .booking-card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: 14px;
      overflow: hidden;
      transition: all 0.2s ease;
      width: 320px;
    }

    .my-bookings-wrapper .booking-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.06);
    }

    .my-bookings-wrapper .booking-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .my-bookings-wrapper .booking-content {
      padding: 18px;
    }

    .my-bookings-wrapper .booking-content h2 {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 10px;
    }

    .my-bookings-wrapper .meta {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 8px 12px;
      font-size: 13px;
      color: var(--text-muted);
      margin-bottom: 12px;
    }

    .my-bookings-wrapper .price-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 12px;
    }

    .my-bookings-wrapper .amount {
      font-size: 15px;
      font-weight: 600;
    }

    .my-bookings-wrapper .status {
      padding: 6px 12px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 600;
      text-transform: capitalize;
    }

    .my-bookings-wrapper .confirmed { background:#dcfce7; color:#166534; }
    .my-bookings-wrapper .pending { background:#fef9c3; color:#854d0e; }
    .my-bookings-wrapper .cancelled { background:#fee2e2; color:#991b1b; }

    @media (max-width: 500px) {
      .my-bookings-wrapper .meta { grid-template-columns: 1fr; }
    }
    .anchor{
      text-decoration: none;
      color: black;
    }

    .dark-theme .anchor{
      text-decoration: none;
      color: white;
    }


    .dark-theme .my-bookings-wrapper .booking-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 20px rgba(256, 256, 256, 0.1);
    }
  </style>
</head>
<body>
  <!-- ✅ Scoped wrapper start -->
  <div class="my-bookings-wrapper">

    <% if(myBookings.length === 0){ %>
           <h1 class="noReview">You don't have any Bookings</h1>
      <% }else{ %>
    <header class="booking-page-header">
      <h1>My Bookings</h1>
    </header>
    <main class="booking-page-main">


      <section class="booking-list">
        <% for(booking of myBookings){ %>
          <a href="/listings/<%=booking.listing._id %>" class="anchor">
             <article class="booking-card">
          <img src="<%=booking.listing.image.url %>" alt="<%=booking.listing.image.filename %>"/>
          <div class="booking-content">
            <h2><%=booking.listing.title %></h2>
            <div class="meta">
              <span>Book_ID:&nbsp;<%= booking._id %></span><br>
              <span>Guests: <%=booking.numberOfGuests %> </span><br>
              <span>Check-in: <%=booking.checkIn.toString().split(" ").splice(1,3).join(" ")%></span><br>
              <span>Check-out: <%=booking.checkOut.toString().split(" ").splice(1,3).join(" ")%></span>
            </div>
            <div class="price-row">
              <span class="amount">₹<%=booking.totalPrice %></span>
              <span class="status <%=booking.status %>"><%=booking.status %></span>
            </div>
          </div>
        </article>
          </a>
       
        <% } %>

      </section>
    </main>
    <% } %>

  </div>
